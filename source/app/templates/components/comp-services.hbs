<!-- Services Section -->
<section id="services">
	<div class="container">
		<div class="row">
			<div class="col-lg-2 text-center">
			</div>
			<div class="col-lg-8 text-center">
				<h2 class="section-heading">Services</h2>
				<h3 class="section-subheading text-muted">
